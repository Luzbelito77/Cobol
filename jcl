  DEFINE PATH (NAME(ALU0051.CURSOS.PERSONA.KSDS.VSAM.PATH) -
         PATHENTRY(ALU0051.CURSOS.PERSONA.KSDS.VSAM.AIX))
  BLDINDEX -
         IDS(ALU0051.CURSOS.PERSONA.KSDS.VSAM) -
         ODS(ALU0051.CURSOS.PERSONA.KSDS.VSAM.AIX) -
         ESORT
