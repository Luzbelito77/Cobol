  REPRO INFILE(PERSONA) OUTFILE(SALIDA) REPLACE
//********************************
//* IDCAMS DEFINE AIX POR NOMBRE *
//********************************
//DEFAIXP  EXEC PGM=IDCAMS,COND=(4,LT)
//SYSPRINT DD SYSOUT=*
//SYSIN    DD *
  DEFINE AIX (NAME(ALU0051.CURSOS.PERSONA.KSDS.VSAM.AIX) -
